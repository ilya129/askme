<div class="form">
  <%= form_for @user do |f| %>
    <%= render 'partials/error_messages', object: f.object %>

  	<div class="form-field">
  	  <%= f.label :email, class: 'form-label' %>
      <%= f.text_field :email, class: 'form-text-field' %>
    </div>

    <div class="form-field">
      <%= f.label :username, class: 'form-label' %>
      <%= f.text_field :username, class: 'form-text-field' %>
    </div>

    <div class="form-field">
      <%= f.label :name, class: 'form-label' %>
      <%= f.text_field :name, class: 'form-text-field' %>
    </div>

    <% if current_user %>
      <div class="form-field">
        <%= f.label :avatar_url, class: 'form-label' %>
        <%= f.text_field :avatar_url, class: 'form-text-field' %>
      </div>

      <div class="form-field">
        <%= f.label :avatar_color, class: 'form-label' %>
        <%= f.color_field :avatar_color %>
      </div>

      <div class="buffer-top-large buffer-bottom">
        Если не хотите менять пароль — оставьте эти поля пустыми!
      </div>
    <% end %>

    <div class="form-field">
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, class: 'form-text-field' %>
    </div>

    <div class="form-field">
      <%= f.label :password_confirmation, class: 'form-label' %>
      <%= f.password_field :password_confirmation, class: 'form-text-field' %>
    </div>

    <div class="form-action">
      <%= f.submit yield(:submit_button), class: 'button button-small button-dark' %>
      <% if current_user %>
        <%= link_to 'Удалить профиль', @user, method: :delete, data: { confirm: t('are_you_sure') }, class: 'button button-small button-dark' %>
      <% end %>
    </div>
  <% end %>
</div>